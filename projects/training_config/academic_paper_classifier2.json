{
  "train_data_path": "projects/data/academic_paper/train.jsonl",
  "validation_data_path": "projects/data/academic_paper/dev.jsonl",
  "dataset_reader": {
    "type": "ssdr"
  },
  "model": {
    "type": "paper_classifer",

    "text_field_embedder": {
      "token_embedders": {
        "tokens": {
          "type": "embedding",
          "pretrained_file": "/Users/panxu/dataset/glove/glove.6B.100d.txt.gz",
          "embedding_dim": 100,
          "trainable": false
        }
      }
    },

    "title_encoder": {
      "type": "lstm",
      "input_size": 100,
      "hidden_size": 100,
      "num_layers": 1,
       "dropout": 0.2,
      "bidirectional": true
    },

    "abstract_encoder": {
      "type": "lstm",
      "input_size": 100,
      "hidden_size": 100,
      "num_layers": 1,
      "dropout": 0.2,
      "bidirectional": true
    },

    "classifier_feedfowrd": {
      "input_dim": 400,
      "num_layers": 2,
      "hidden_dims": [200, 3],
      "activations": ["sigmoid", "linear"],
      "dropout": [0.2, 0.0]
    }
  },

  "iterator": {
    "type": "bucket",
    "sorting_keys": [["abstract", "num_tokens"], ["title", "num_tokens"]],
    "padding_noise": 0.0,
    "batch_size": 64
  },

  "trainer": {
    "num_epochs": 5,
    "cuda_device": -1,
    "grad_clipping": 5.0,
    "validation_metric": "+accuracy",
    "optimizer": {
      "type": "adagrad"
    }
  }
}